@model IEnumerable<Domain.Entities.ShoppingCart>

@{
    ViewBag.Title = "CommandList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Command List</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCLient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAPack)
        </th>
        <th>
            Quotation
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCLient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAPack)
        </td>
        <td>
            5.000
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
