@model IEnumerable<Domain.Entities.Invoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Go To Command List", "CommandList")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idClient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idProduit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idQuotation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SumInvoice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateInvoice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idClient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idProduit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idQuotation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SumInvoice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateInvoice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
